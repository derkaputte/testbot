      <origin rpy="0 0 1.5707963268" xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="base_to_stuetz" type="fixed">
    <parent link="base_link"/>
    <child link="stuetz"/>
    <origin xyz="-0.145 0 0.051"/>
  </joint>


