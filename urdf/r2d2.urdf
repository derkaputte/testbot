<!-- BASE -->
  <link name="base_link">
    <visual>
      <origin rpy="0 0 -1.57075" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://testbot/meshes/Base.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

<!-- WHEELS -->

  <link name="wheel_r">
